# Anthropic API key for Claude Agent SDK
ANTHROPIC_API_KEY=your-api-key-here

# Composio API key for Tool Router
COMPOSIO_API_KEY=your-composio-api-key-here

# Smithery API key (optional) for MCP tools via Smithery Connect (e.g. Exa search)
SMITHERY_API_KEY=

# DataForSEO credentials (optional) for SEO tools via DataForSEO MCP servers
DATAFORSEO_USERNAME=
DATAFORSEO_PASSWORD=

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# OpenAI (for text-embedding-3-small vector embeddings)
OPENAI_API_KEY=your-openai-api-key-here

# Optional auth and CORS behavior
# ALLOW_ANONYMOUS=false             # Permit unauthenticated users with scoped anonymous actor IDs
# ADMIN_EMAILS=admin@company.com     # Comma-separated admin allowlist
# CORS_ORIGINS=https://app.example.com,http://localhost:3000  # Required in production (e.g. https://cowork.ignitabull.org)
# ALLOW_NULL_ORIGIN=false           # Set true only if your browser sends null origin

# Optional scheduler hardening
# WEBHOOK_HOST_ALLOWLIST=api.example.com,api.internal.com
# JOB_CLAIM_LEASE_MS=120000         # Lease window in ms for claim/recovery

# Plugin install/MCP controls
# PLUGIN_GIT_INSTALL_ALLOWLIST=github.com,gitlab.com,bitbucket.org
# PLUGIN_ALLOW_LOCAL_MCP=false       # Set true to permit plugin local MCP (npx/node/python/...)
# PLUGIN_MCP_HOST_ALLOWLIST=example.com

# Browser automation (optional) â€” also configurable in Settings UI
# BROWSER_ENABLED=false        # Enable browser automation tools
# BROWSER_MODE=clawd            # 'clawd' (isolated Chromium) or 'chrome' (CDP)
# BROWSER_HEADLESS=false        # Run browser without visible window
# BROWSER_BACKEND=builtin       # 'builtin' (Playwright) or 'agent-browser' (Vercel)

# Set to false once migration from localStorage is confirmed
ALLOW_ANONYMOUS=false
